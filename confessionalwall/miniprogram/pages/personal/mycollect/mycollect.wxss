/* 外层视图 */
.cont {
     width: 100%;
     margin: 0 auto;
     background-color: #f5f5f5;
}

.list {
     position: relative;
     height: 125rpx;
     margin: 10rpx;
     border-radius: 10rpx;
     line-height: 125rpx;
     overflow: hidden;
}

/* 删除外层包裹视图 */
.list_del {
     position: absolute;
     top: 0;
}
.checked{
     position: absolute;
     /* top: 0; */
}
.check{
     /* background-color : white; */
     /* width: 160rpx; */
     text-align: center;
     z-index: 4;
     /* right: 0; */
     /* color: #fff */
     height: 100%;
     display: flex;
}
.txt {
     /* left: 0px; */
     position: relative;
     background-color: #fff;
     width: 100%;
     z-index: 5;
     padding: 0 10rpx;
     transition: left 0.2s ease-in-out;
     white-space: nowrap;
     overflow: hidden;
     text-overflow: ellipsis;
}

