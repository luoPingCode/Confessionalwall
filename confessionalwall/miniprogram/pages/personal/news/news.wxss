.container {
     background-color: white;
     width: 100%;
     height: 100%;
}

.topNews {
     background-color: rgba(0, 0, 0, 0.3);
     border: 1px solid rgba(0, 0, 0, 0.3);
     border-radius: 10rpx;
     box-shadow: 0 0 5px rgba(206, 202, 202, 0.541);
     margin-top: 5px;
     padding: 5px;
}

.topNews .clearBtn {
     color: royalblue;
     font-weight: bold;
}

.line {
     width: 100%;
     height: 1px;
     border-top: solid #ACC0D8 1px;
     margin-top: 5rpx;
}
.noNews{
     margin: 0 auto;
     margin-top: 50%;
     font-size: 20px;
     margin-bottom: 100%;
}

/* 外层视图 */
.cont {
     width: 100%;
     margin: 0 auto;
     background-color: #f5f5f5;
}

.list {
     position: relative;
     height: 120rpx;
     margin: 10rpx;
     border-radius: 10rpx;
     line-height: 120rpx;
     overflow: hidden;
}

/* 删除外层包裹视图 */
.list_del {
     position: absolute;
     top: 0;
}

.list_del.txt {
     position: relative;
     background-color: #fff;
     width: 100%;
     z-index: 5;
     padding: 0 10rpx;
     transition: left 0.2s ease-in-out;
     white-space: nowrap;
     overflow: hidden;
     text-overflow: ellipsis;
}

/* 删除 */
.list_del.del {
     background-color: #e64340;
     width: 160rpx;
     text-align: center;
     z-index: 4;
     right: 0;
     color: #fff
}

/* 列表图片 */
.list_img {

     width: 105rpx;
     height: 105rpx;
     border-radius: 10rpx;
     vertical-align: middle;
     margin-left: 5rpx;
     margin-top: -4rpx;
}

/* 列表名称 */
.list_name {
     position: absolute;
     margin-left: 20rpx;
     bottom: 35rpx;
     /* color: red; */
     /* font-weight: bold; */
     font-size: 15px;
}

/* 列表内容 */
.list_content {
     position: absolute;
