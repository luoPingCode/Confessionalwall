page {
     background-color: #F5F5F5;
}
.cu-form-group{
     background-color: white;
     padding: 1rpx 30rpx;
     display: flex;
     align-items: center;
     min-height: 100rpx;
     justify-content: space-between;
}
.cu-form-group textarea {
     box-sizing: border-box;
     margin: 32rpx 0 30rpx;
     height: 4.6em;
     width: 100%;
     line-height: 1.2em;
     flex: 1;
     font-size: 28rpx;
     padding: 0;
 }
.cu-form-group .title {
     min-width: calc(4em + 30rpx);
}

.cu-bar {
    background: white;
    display: flex;
    position: relative;
    align-items: center;
    min-height: 100rpx;
    justify-content: space-between;
    
}

.cu-bar .action:first-child {
     margin-left: 30rpx;
     font-size: 30rpx;
}

.cu-bar .action {
     display: flex;
     align-items: center;
     height: 100%;
     justify-content: center;
     max-width: 100%;
}
.cu-bar .action:last-child {
     margin-right: 30rpx;
 }
 .van-uploader{
      background: white;
      padding-left: 30rpx;
      width: 100%;
      
 }
 .cu-form-group .title {
     text-align: justify;
     padding-right: 30rpx;
     font-size: 30rpx;
     position: relative;
     height: 60rpx;
     line-height: 60rpx;
 }
 .cu-form-group input {
     flex: 1;
     font-size: 30rpx;
     color: #555;
     padding-right: 20rpx;
 }
 .margin-top{
      margin-top: 20rpx;
 }
 .padding{
      padding: 30rpx;
      display: flex;
      flex-direction: column;
 }














