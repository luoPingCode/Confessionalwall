 
.upload{
  padding-top: 20rpx;
  background-color: white;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.upload .image-group{
  margin-left: 10rpx;
  position: relative;
   
}
.upload .image-group image{
  width: 100%;
  height: 100%;
}
.upload .add-image{
  font-size: 200rpx;
  background: #f2f2f2;
  color: #a9a9a9;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  margin-bottom: 10rpx;
}
.add-image view{
  margin-top:-20rpx;
   
}
.niming-group{
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
}
.niming-group view{
  margin-left: 25rpx;
  color: #a9a9a9;
}
.niming-group label {
  margin-right: 30rpx;
}